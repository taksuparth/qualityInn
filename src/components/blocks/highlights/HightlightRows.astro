---
// Hotel Highlights Section
// ------------
// Description: A section with a hotel highlight text and image rows.

// Components
// - UI
import TextImage from '../basic/TextImage.astro'

// Content
import suiteRoom from '../../../assets/highlights/suite-room.jpg'
import suiteRoomMobile from '../../../assets/highlights/suite-room.jpg'
import lobby from '../../../assets/highlights/hotel-lobby.jpg'
import lobbyMobile from '../../../assets/highlights/hotel-lobby.jpg'
import oneQueenBed from '../../../assets/highlights/one-queen-bed.jpg'
import oneQueenBedMobile from '../../../assets/highlights/one-queen-bed.jpg'
import twoQueenBed from '../../../assets/highlights/one-queen-bed.jpg'
import twoQueenBedMobile from '../../../assets/highlights/one-queen-bed.jpg'

type HighlightBlock = {
	title: string
	text: string
	image: any
	mobileImage?: any
	imageWidth: number
	imageHeight: number
	imagePosition: 'left' | 'right'
}
const highlightBlocks: HighlightBlock[] = [
	{
		title: 'Hotel <strong>Lobby</strong>',
		text: 'Our hotel lobby is designed to provide you with a warm and welcoming atmosphere. Enjoy our comfortable seating areas, complimentary coffee, and free wifi. Whether you are waiting for your room or just relaxing, our lobby is the perfect place to unwind.',
		image: lobby,
		imageWidth: lobby.width,
		imageHeight: lobby.height,
		mobileImage: lobbyMobile,
		imagePosition: 'left'
	},
	{
		title: 'Suite <strong>Room</strong>',
		text: 'Our suite rooms are designed to provide you with the ultimate comfort and luxury. Enjoy spacious rooms with free wifi and continental breakfast. Whether you are traveling for business or leisure, our suite rooms are the perfect choice for your stay.',
		image: suiteRoom,
		imageWidth: suiteRoom.width,
		imageHeight: suiteRoom.height,
		mobileImage: suiteRoomMobile,
		imagePosition: 'right'
	},
	{
		title: 'One <strong>Queen</strong> Bed',
		text: 'Our one queen bed rooms are designed to provide you with the ultimate comfort and relaxation. Enjoy a spacious room with free wifi and continental breakfast. Whether you are traveling for business or leisure, our one queen bed rooms are the perfect choice for your stay.',
		image: oneQueenBed,
		mobileImage: oneQueenBedMobile,
		imageWidth: oneQueenBed.width,
		imageHeight: oneQueenBed.height,
		imagePosition: 'left'
	},
	{
		title: '<strong>Two</strong> Queen Beds',
		text: 'Our two queen bed rooms are designed to provide you with the ultimate comfort and relaxation. Enjoy a spacious room with free wifi and continental breakfast. Whether you are traveling for business or leisure, our two queen bed rooms are the perfect choice for your stay.',
		image: twoQueenBed,
		mobileImage: twoQueenBedMobile,
		imageWidth: twoQueenBed.width,
		imageHeight: twoQueenBed.height,
		imagePosition: 'right'
	}
]
---

{
	highlightBlocks.map((highlight, key) => (
		<TextImage
			id={`highlight-${key}`}
			title={highlight.title}
			text={highlight.text}
			image={highlight.image}
			imageWidth={highlight.imageWidth}
			imageHeight={highlight.imageHeight}
			mobileImage={highlight.mobileImage}
			imagePosition={highlight.imagePosition}
			classes={key === 0 ? '!pb-0' : key === highlightBlocks.length - 1 ? '!pt-0' : '!py-0'}
		/>
	))
}
